<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartcanteen.controllers.StudentLogin" prefHeight="400.0" prefWidth="300.0">
    <children>
        <Label layoutX="100.0" layoutY="30.0" text="Student Login" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="50.0" layoutY="100.0" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="150.0" promptText="Password" />
        <Button fx:id="loginButton" layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
        <Hyperlink layoutX="80.0" layoutY="250.0" text="Register" onAction="#handleRegister" />
    </children>
</AnchorPane>
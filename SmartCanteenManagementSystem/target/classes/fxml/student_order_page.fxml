<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" styleClass="background">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Order Food" textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        
        <VBox layoutX="50.0" layoutY="70.0" spacing="10.0">
            <Label text="Food Categories:" />
            <ListView fx:id="foodCategoriesList" prefHeight="150.0" prefWidth="500.0" />
            
            <Label text="Food Items:" />
            <ListView fx:id="foodItemsList" prefHeight="150.0" prefWidth="500.0" />
        </VBox>
        
        <Button layoutX="250.0" layoutY="350.0" mnemonicParsing="false" onAction="#addToCart" text="Add to Cart" />
        <Button layoutX="400.0" layoutY="350.0" mnemonicParsing="false" onAction="#goToDashboard" text="Back to Dashboard" />
    </children>
</AnchorPane>
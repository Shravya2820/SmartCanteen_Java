<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="student.TokenPage" spacing="10" alignment="CENTER" style="-fx-background-color: #f0f4f7;">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Smart Canteen - Token" style="-fx-font-size:18px; -fx-font-weight:bold;" />

    <Label fx:id="tokenLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

    <ListView fx:id="ordersListView" prefHeight="200" prefWidth="300"/>

    <Label fx:id="totalLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

    <Button fx:id="backButton" text="Back to Dashboard" onAction="#onBackToDashboard"/>

    <ComboBox fx:id="categoryCombo" onAction="#onCategorySelected"/>
    <ListView fx:id="menuListView" prefHeight="200" prefWidth="300"/>
    <Spinner fx:id="qtySpinner" prefWidth="100"/>
    <Button fx:id="addToCartButton" text="Add to Cart" onAction="#onAddToCart"/>
    <Label fx:id="cartSizeLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
    <Label fx:id="totalLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
    <Button fx:id="backButton" text="Back" onAction="#onBack"/>

</VBox>